<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>OT News Grid</name>
	<author>OmegaTheme.com</author>
	<creationDate>2015</creationDate>
	<copyright>Copyright (C) 2009 - 2014 Omegatheme. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>services@omegatheme.com</authorEmail>
	<authorUrl>http://www.omegatheme.com</authorUrl>
	<version>1.0.1</version>
	<description>MOD_NEWSGRID_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_newsgrid">mod_newsgrid.php</filename>
		<folder>assets</folder>
		<folder>language</folder>
		<folder>libraries</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_newsgrid.xml</filename>
	</files>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_LATEST_NEWS" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="catid"
					type="category"
					extension="com_content"
					multiple="true"
					size="10"
					default=""
					label="JCATEGORY"
					description="MOD_NEWSGRID_FIELD_CATEGORY_DESC"
				>
					<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>               
                <field
                    name="grid_layout"
                    type="radio" class="btn-group"
                    default="1"
                    label="MOD_NEWSGRID_FIELD_LAYOUT_LABEL"
                    description="MOD_NEWSGRID_FIELD_LAYOUT_DESC"
                >
                    <option value="1">MOD_NEWSGRID_FIELD_LAYOUT_CONTENT</option>
                    <option value="2">MOD_NEWSGRID_FIELD_LAYOUT_IMAGE</option>
                </field> 
                <field
                    name="grid_style"
                    type="radio" class="btn-group"
                    default="vertical"
                    label="MOD_NEWSGRID_FIELD_STYLE_LABEL"
                    description="MOD_NEWSGRID_FIELD_STYLE_DESC"
                >
                    <option value="horizontal">MOD_NEWSGRID_FIELD_STYLE_HORIZONTAL</option>
                    <option value="vertical">MOD_NEWSGRID_FIELD_STYLE_VERTICAL</option>
                </field>                 
				<field
					name="count"
					type="text"
					default="5"
					label="MOD_NEWSGRID_FIELD_COUNT_LABEL"
					description="MOD_NEWSGRID_FIELD_COUNT_DESC" />

				<field
					name="show_featured"
					type="list"
					default=""
					label="MOD_NEWSGRID_FIELD_FEATURED_LABEL"
					description="MOD_NEWSGRID_FIELD_FEATURED_DESC"
				>
					<option value="">JSHOW</option>
					<option value="0">JHIDE</option>
					<option value="1">MOD_NEWSGRID_VALUE_ONLY_SHOW_FEATURED</option>
				</field>

				<field
					name="ordering"
					type="list"
					default="published"
					label="MOD_NEWSGRID_FIELD_ORDERING_LABEL"
					description="MOD_NEWSGRID_FIELD_ORDERING_DESC"
				>
					<option value="c_dsc">MOD_NEWSGRID_VALUE_RECENT_ADDED</option>
					<option value="m_dsc">MOD_NEWSGRID_VALUE_RECENT_MODIFIED</option>
					<option value="p_dsc">MOD_NEWSGRID_VALUE_RECENT_PUBLISHED</option>
					<option value="mc_dsc">MOD_NEWSGRID_VALUE_RECENT_TOUCHED</option>
					<option	value="random">MOD_NEWSGRID_VALUE_RECENT_RAND</option>
				</field>

                
                <field
					name="show_date_format"
					type="text"
					default="DATE_FORMAT_LC3"
					label="MOD_NEWSGRID_FIELD_DATEFIELDFORMAT_LABEL"
					description="MOD_NEWSGRID_FIELD_DATEFIELDFORMAT_DESC" />

				<field
					name="show_category"
					type="radio"
					default="1"
					class="btn-group btn-group-yesno"
					label="JCATEGORY"
					description="MOD_NEWSGRID_FIELD_SHOWCATEGORY_DESC"
				>
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>

				<field
					name="show_hits"
					type="radio"
					default="1"
					class="btn-group btn-group-yesno"
					label="MOD_NEWSGRID_FIELD_SHOWHITS_LABEL"
					description="MOD_NEWSGRID_FIELD_SHOWHITS_DESC"
				>
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>

                <field name="thumbnail_width" type="text"
                    description="MOD_NEWSGRID_THUMBNAIL_WIDTH_DESC"
                    label="MOD_NEWSGRID_THUMBNAIL_WIDTH_LABEL"
                    size="15"
                    default="340"
                />

                <field name="thumbnail_height" type="text"
                    description="MOD_NEWSGRID_THUMBNAIL_HEIGHT_DESC"
                    label="MOD_NEWSGRID_THUMBNAIL_HEIGHT_LABEL"
                    size="15"
                    default="300"
                />                 

			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

				<field
					name="cachemode"
					type="hidden"
					default="static"
				>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" priority="1" name="Module News Grid Site">http://www.omegatheme.com/jedupdates/mod_newsgrid/extension.xml</server>
	</updateservers>
</extension>
